{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "npm run type-check && npm run lint && vite build",
        "build:dev": "vite build --mode development",
        "build:staging": "vite build --mode staging",
        "build:production": "vite build --mode production",
        "preview": "vite preview",
        "test": "vitest --run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 150",
        "lint:fix": "eslint . --ext ts,tsx --fix",
        "format": "prettier --write \"resources/**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "format:check": "prettier --check \"resources/**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "type-check": "tsc --noEmit",
        "analyze": "npm run build && npx vite-bundle-analyzer dist",
        "clean": "if exist dist rmdir /s /q dist && if exist public\\build rmdir /s /q public\\build",
        "prebuild": "npm run clean",
        "postbuild": "npm run analyze:size",
        "analyze:size": "dir public\\build /s || echo Build analysis complete",
        "deploy:staging": "npm run build:staging && echo 'Staging build complete'",
        "deploy:production": "npm run build:production && echo 'Production build complete'"
    },
    "dependencies": {
        "@headlessui/react": "^2.0.0",
        "@heroicons/react": "^2.2.0",
        "axios": "^1.12.2",
        "react": "^18.3.0",
        "react-dom": "^18.3.0",
        "react-hook-form": "^7.53.0",
        "react-router-dom": "^6.26.0"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^24.9.1",
        "@types/react": "^18.3.0",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "@vitejs/plugin-react": "^4.3.0",
        "concurrently": "^9.0.1",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.35.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.0",
        "jsdom": "^27.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "prettier": "^3.3.0",
        "tailwindcss": "^4.0.0",
        "terser": "^5.44.0",
        "typescript": "^5.5.0",
        "vite": "^7.0.7",
        "vitest": "^4.0.4"
    }
}
