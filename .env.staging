# Staging Environment Configuration
APP_NAME="OSC Pelesenan (Staging)"
APP_ENV=staging
APP_DEBUG=false
APP_URL=https://staging.osc-pelesenan.gov.my

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=info

# Database
DB_CONNECTION=mysql
DB_HOST=staging-db.osc-pelesenan.gov.my
DB_PORT=3306
DB_DATABASE=osc_pelesenan_staging
DB_USERNAME=staging_user
DB_PASSWORD=

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true

# Cache
CACHE_STORE=redis
REDIS_HOST=staging-redis.osc-pelesenan.gov.my
REDIS_PASSWORD=
REDIS_PORT=6379

# Queue
QUEUE_CONNECTION=redis

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.staging.osc-pelesenan.gov.my
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@staging.osc-pelesenan.gov.my"
MAIL_FROM_NAME="${APP_NAME}"

# Frontend Environment Variables
VITE_APP_NAME="${APP_NAME}"
VITE_APP_ENV=staging
VITE_API_URL="${APP_URL}/api"
VITE_APP_VERSION=1.0.0

# Feature Flags
MODULE_M01=true
MODULE_M02=false
MODULE_M03=false
MODULE_M04=false
MODULE_M05=false

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=90
AUDIT_AUTO_CLEANUP=true
AUDIT_LOG_CHANNEL=daily
AUDIT_LOG_LEVEL=info

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true